@model SearchApplication.Models.Search 
@{
    ViewData["Title"] = "search";
}

<h1>search</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="search">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="form-group">
                <label asp-for="SearchCriteria" class="control-label"></label>
                <input asp-for="SearchCriteria" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@if(ViewBag.Records!=null){
    <table class="table table-success"  >
    <thead>
        <tr>
            <th>
                ProductName
            </th>
            <th>
                Manufature
            </th>
            <th>
                Price
            </th>
            <th>
               Seller
            </th>
            <th>
                Description
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @ViewBag.Records)
        {
            <tr>
                <td>
                    @item.ProductName
                </td>
                <td>
                    @item.Manufature
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.Seller
                </td>
                <td>
                    @item.Description
                </td>
            </tr>
        }
    </tbody>
</table>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>