@model IEnumerable<E_Commerce.Models.subCategory>

@{
    ViewBag.Title = "Get";
}

<div style=" position: relative; top: 12rem;">
    <div style="background-color: ghostwhite; padding: 8px; border-radius: 8px; cursor: pointer; display: inline-block; ">
        @Html.ActionLink("Create New", "Create")
    </div>
    <table class="table table-striped table-hover bg-warning">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.categoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubcategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discription)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.categoryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubcategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discription)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.SubCategoryId }, htmlAttributes: new { style = "background-color: green;padding: 10px;color: aliceblue;border-radius: 6px;" })
                    @*  @Html.ActionLink("Delete", "Delete", new { id = item.SubCategoryId })*@
                </td>
            </tr>
        }

    </table>
</div>