@model IEnumerable<E_Commerce.Models.category>

@{
    ViewBag.Title = "Get";
}

<div style="position: relative;top: 12rem;">
    <div style="background-color: ghostwhite; padding: 8px; border-radius: 8px; cursor: pointer; display: inline-block; ">
        @Html.ActionLink("Create New", "Create")
    </div>
    <table class="table table-striped table-hover bg-danger">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.categoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.categoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.categoryid }, htmlAttributes: new { style = "background-color: green;padding: 10px;color: aliceblue;border-radius: 6px;" })
                    @*  @Html.ActionLink("Delete", "Delete", new { id = item.categoryid })*@
                </td>
            </tr>
        }

    </table>
</div>    