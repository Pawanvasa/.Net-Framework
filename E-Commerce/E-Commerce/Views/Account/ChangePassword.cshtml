@{
    ViewBag.Title = "ChangePassword";
}

<div style="margin-top: 22rem; position: relative; left: 38rem; ">

    @using (Html.BeginForm("updatePassword", "Account", new { userid = ViewBag.userid }))
    {
        <h2>Change Password</h2>
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10" style=" position: relative; left: 24px; }">
                    <label class="active">New Password</label>
                    <input type="text" placeholder="Enter password" name="newpwd" required>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <label class="active">Confirm Password</label>
                    <input type="text" placeholder="Enter password" name="cfnpwd" required>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-info" style="padding-left: 3rem; padding-right: 3rem; position: relative; left: 1.5rem;"/>
                </div>
            </div>
        </div>
    }
    </div>
