<body style="background-image: url(../../img/Backgrounds/successbg.jpg); background-size: cover; background-position: center; background-repeat: no-repeat;">
    @using (Html.BeginForm("Index", "Home"))
    {
        <div class="card" style=" top: 32px; position: relative;">
